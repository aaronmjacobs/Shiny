#ifndef SHINY_H
#define SHINY_H

namespace Shiny {

/**
 * Version information
 */
constexpr int kVersionMajor = @SHINY_VERSION_MAJOR@;
constexpr int kVersionMinor = @SHINY_VERSION_MINOR@;
constexpr int kVersionMicro = @SHINY_VERSION_MICRO@;
constexpr int kVersionBuild = @SHINY_VERSION_BUILD@;

/**
 * Possible results of Shiny functions
 */
enum class Result {
   kOK,
   kWorkingDirectory,
   kGlfwInit,
   kGladLoad,
   kWindowParams,
   kCreateWindow
};

/**
 * Returns a string description of an error result
 */
const char* errorString(Result result);

/**
 * Initializes Shiny
 */
Result init();

/**
 * Terminates Shiny
 */
void terminate();

/**
 * Loads OpenGL - must be called after an OpenGL context is created
 */
Result loadGL();

} // namespace Shiny

#endif
